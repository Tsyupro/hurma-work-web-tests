{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "@wdio/globals/types"
        ],
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
    },
    "include": [
        "./test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}